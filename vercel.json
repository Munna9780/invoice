{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_URL": "https://your-domain.vercel.app"
  },
  "build": {
    "env": {
      "NEXT_SHARP_PATH": "/tmp/node_modules/sharp"
    }
  }
} 